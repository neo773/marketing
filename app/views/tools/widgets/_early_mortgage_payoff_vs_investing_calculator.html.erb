<div class="grid grid-cols-1 p-2 bg-white border shadow-xs sm:grid-cols-3 rounded-xl">
  <aside class="bg-gray-25 p-4 rounded-lg flex flex-col gap-4 col-span-1 w-fit">
    <%= render "tools/widgets/forms/early_mortgage_payoff_vs_investing_calculator", tool: tool, frame_id: :payoff_vs_investing_results %>
  </aside>

  <div class="col-span-2 ml-6">
    <%= turbo_frame_tag :payoff_vs_investing_results do %>
      <div class="flex-1">
        <% if tool.blank? %>
          <%= render "tools/widgets/shared/blank_slate", text: "Enter your details to see the impact of making extra payments on your mortgage or investing the difference!" %>
        <% else %>
          <%= render "tools/widgets/content/early_mortgage_payoff_vs_investing_calculator", tool: tool %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>