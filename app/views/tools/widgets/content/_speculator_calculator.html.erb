<section>
  <div class="flex flex-col gap-4 p-6 rounded-lg">
    <div class="flex flex-col gap-4">
      <div class="text-left">
        <div class="text-sm text-gray-500">If you're right, your <%= number_to_currency(tool.investment_amount) %> would be worth</div>
        <div class="text-3xl font-medium text-gray-900">
          <%= number_to_currency(tool.future_value, precision: 2) %>
        </div>
      </div>

      <div class="text-left">
        <div class="text-sm text-gray-500">Multiple</div>
        <div class="text-3xl font-medium text-gray-900">
          <%= number_with_precision(tool.multiple, precision: 2) %>x
        </div>
      </div>

      <div class="text-left">
        <div class="text-sm text-gray-500">Your gain</div>
        <div class="text-3xl font-medium text-gray-900">
          <%= number_to_currency(tool.gain, precision: 2) %>
        </div>
      </div>
    </div>
  </div>
</section>